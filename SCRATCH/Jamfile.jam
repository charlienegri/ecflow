exe client : [ glob src/client.cpp  ] 
           pthread
           libssl
           libcrypto
           dl
           /site-config//boost_system
         : <include>src/
           <variant>debug:<define>DEBUG
         ;

exe server : [ glob src/server.cpp  ] 
           pthread
           libssl
           libcrypto
           dl
           /site-config//boost_system
         : <include>src/
           <variant>debug:<define>DEBUG
         ;
       
 